{% extends 'base.html.twig' %}

{% block title %}Saisissez les informations demandées pour nous rejoindre.{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card my-5 p-4" style="background-color: #f1f1f1; border: none;">
                <h2 class="mb-4 text-center" style="font-size: 28px; color: #A97448;">Saisissez les informations demandées pour nous rejoindre.</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputPseudo" class="form-label">Pseudo</label>
                        {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputFirstName" class="form-label">Prénom</label>
                        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputLastName" class="form-label">Nom</label>
                        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputAddress" class="form-label">Adresse</label>
                        {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputZipCode" class="form-label">Code postal</label>
                        {{ form_widget(registrationForm.zipcode, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputCity" class="form-label">Ville</label>
                        {{ form_widget(registrationForm.city, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="inputCivility" class="form-label">Civilité</label>
                        {{ form_widget(registrationForm.civility, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.RGPDConsent, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="inputRGPDConsent">Consultez les <a href="#" style="color: #A97448;">Conditions d'utilisation</a></label>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary" style="background-color: #A97448; border-color: #A97448;">Continuer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
