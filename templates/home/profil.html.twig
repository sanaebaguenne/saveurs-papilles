{% extends 'base.html.twig' %}

{% block body %}

<style>
    .container {
        width: 100%;
        max-width: 1200px; /* Vous pouvez ajuster cette valeur en fonction de la largeur maximale souhait√©e */
        margin: 0 auto;
        padding: 15px;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        border: 1px solid #A97448;
    }

    th {
        background-color: #A97448;
        color: white;
    }

    .card {
        margin-bottom: 20px;
    }

    .card-img-top {
        width: 100%;
        height: auto;
    }

    .alert {
        background-color: #e7dfcb;
    }

    /* Appliquer la barre de d√©filement horizontale pour les petits √©crans */
    @media (max-width: 767px) {
        .table-scrollable {
            overflow-x: auto;
        }
    }
</style>

<div class="container text-center">
    <div class="card">
        <img src="{{ asset('images/slide/banners.png')}}" alt="image profil" class="card-img-top">
        <div class="alert">
            Ci-dessous vous trouverez vos informations personnelles
        </div>
        <div class="table-scrollable">
            <table class="table">
                <tbody>
                      <tr style="background: #A97448; color: white;">
                        <th scope="col">Email</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Pr√©nom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Sexe</th>
                        <th scope="col">Date d'inscription</th>
                        <th scope="col">Editer</th>
                    </tr>
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.civility }}</td>
                        <td>{{ user.createdAt | date('d/m/Y') }}</td>
                        <td><a href="{{ path('app_register_edit', {'id': user.id}) }}" class="btn btn-primary"><i
                            class="fa-solid fa-pen-to-square"></i></a></td>
                    </tr>
                    </tbody>
            </table>
            <div class="text-center mt-2">
                <p class="mt-2">üí¨ En cas de modification de vos donn√©es personnelles, vous devrez choisir un nouveau mot de passe</p>
            </div>
        </div>
    </div>

    <div class="card">
        <img src="{{ asset('images/boutique/banniere-profil1.jpg')}}" alt="image profil" class="card-img-top">
        <div class="alert">
            Ci-dessous vous trouverez l'historique de vos commandes
        </div>
        <div class="table-scrollable">
            <table class="table">
                <tbody>
            <tr style="background: #A97448; color: white;">
                <th scope="col">Commande</th>
                <th scope="col">Produit</th>
                <th scope="col">Photo</th>
                <th scope="col">Prix Unitaire</th>
                <th scope="col">Quantit√© de produit</th>
                <th scope="col">Prix total de chaque produit</th>
                <th scope="col">Quantit√© totale</th>
                <th scope="col">Prix total des tout les produits</th>
                <th scope="col">Date</th>
                <th scope="col">Statut</th>
            </tr>
            {% for commande in user.orders %}
                {% for orderDetail in commande.orderDetails %}
                    {% set product = orderDetail.product %}
                    <tr>
                        {% if loop.index == 1 %}
                            <td rowspan="{{ commande.orderDetails|length }}">{{ commande.id }}</td>
                        {% endif %}
                        <td>{{ product.title }}</td>
                        <td>
                            <img src="{{ asset('images/produits/' ~ product.image) }}" alt="photo du produit"
                                style="height: 100px; object-fit: contain;">
                        </td>
                        <td>{{ product.price }} ‚Ç¨</td>
                        <td>{{ orderDetail.quantity }}</td>
                        <td>{{ orderDetail.total }} ‚Ç¨</td>
                        {% if loop.index == 1 %}
                            <td rowspan="{{ commande.orderDetails|length }}">{{ commande.quantity }}</td>
                            <td rowspan="{{ commande.orderDetails|length }}">{{ commande.total }} ‚Ç¨</td>
                            <td rowspan="{{ commande.orderDetails|length }}">{{ commande.createdAt | date('d/m/Y') }}</td>
                            <td rowspan="{{ commande.orderDetails|length }}">{{ commande.statut }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
</div>


</div>

</div>
{% endblock %}