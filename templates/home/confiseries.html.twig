 <style>
    .card-img-container {
        position: relative;
        display: inline-block;
    }

     .image-overlay {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        background-color: #d5e6e8;
        padding: 10px;
        color: black;
        z-index: 2;
        pointer-events: none;
        font-size: 14px
    }
    

    .first-section {
    margin-bottom: 250px; /* Ajoutez la valeur de marge souhaitée */
}
.second-section {
    margin-top: 50px; /* Ajoutez la valeur de marge souhaitée */
    margin-bottom: 50px;
}
.add-to-cart.active {
  background-color: #A97448;
  color: white;
}
.add-to-cart {
  border: 1px solid #A97448;
  border-radius: 30px;
  color: #A97448;
  background-color: white;
  width: 180px;
  height: 39px;
}

/* Style lorsque le bouton est activé (cliqué) */
.add-to-cart:hover {
  background-color: #A97448;
  color: white;
   border-color: #A97448; /* Couleur de la bordure en marron */
}
@media (max-width: 767px) {
  .card-img-top {
    height: 300px; /* Ajustez cette valeur selon vos préférences */
    object-fit: cover;
  }
}

@media (max-width: 500px) {
        .image-overlay {
      position: static; /* Enlever le positionnement absolu */
      margin-top: 10px; /* Ajouter un espace entre l'image et l'overlay */
      transform: none; /* Supprimer le transform */
    }

    }


</style> 



    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <section class="first-section">
         <div class="card-img-container">

            <img src="{{ asset('images/slide/image-top-confiserie.jpg') }}" class="card-img-top" alt="image du produit", style="height: 500px " "">
            <div class="image-overlay">
                {# <img src="{{ asset('images/lego/picto-cacao.svg') }}" class="logo" alt="logo" style="height: 80px";> #}
                <h1 class="card-title"><br>CONFISERIES</h1><br>
                <p class="card-title">Nougats à l'ancienne au miel de Tanneron, calissons, <br>
                orangettes<br>
                    et clémentines de Corse confites et habillées <br>
                    d'un délicat chocolat et sans conservateurs, pâtes de <br>
                    fruits…<br>
                    Nos confiseries artisanales divinement aromatisées
                    <br>
                    sont un joyeux retour en enfance !
                    <br><br>
                    </p>
            </div>
          </div>
    </section>
    <div class="container">
           
          
       

